<UserControl x:Class="SiRISApp.View.UserControls.SessionPlayer.SessionPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SiRISApp.View.UserControls.SessionPlayer"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Button.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.CheckBox.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Flipper.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Popupbox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <local:Player Grid.Row="0"/>
        <ListBox x:Name="MemberListBox"
                 ItemsSource="{Binding SessionPlayerViewModel.Cells}"
                 Background="#00000000"
                 Grid.Row="1">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Margin" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel IsItemsHost="True" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ListBoxItem>
                        <materialDesign:Flipper  materialDesign:ElevationAssist.Elevation="Dp0">
                            <materialDesign:Flipper.FrontContent>
                                <materialDesign:ColorZone Background="#af282725"
                                                          CornerRadius="30"
                                                          Padding="0">
                                    <Grid Width="300"
                                          Height="256"
                                          Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="Name"
                                                   FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding Name}"
                                                   Background="#00000000">
                                            </TextBlock>
                                            <Button Grid.Column="1" 
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}">
                                                <materialDesign:PackIcon Kind="MonitorEye"/>
                                            </Button>
                                            <Button Grid.Column="2" 
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}">
                                                <materialDesign:PackIcon Kind="Hand"/>
                                            </Button>
                                            <Button Grid.Column="3" 
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}">
                                                <materialDesign:PackIcon Kind="Videocam"/>
                                            </Button>
                                        </Grid>

                                        <ListView Grid.Row="2"
                                              ItemsSource="{Binding UsersInsideSession}"
                                              Background="#00000000">
                                            <ListView.ItemContainerStyle>
                                                <Style TargetType="ListViewItem">
                                                    <Setter Property="FontSize" Value="18"/>
                                                </Style>
                                            </ListView.ItemContainerStyle>
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <ListViewItem>
                                                        <TextBlock Text="{Binding Nome}"></TextBlock>
                                                    </ListViewItem>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>

                                        </ListView>
                                    </Grid>
                                </materialDesign:ColorZone>
                         
                            </materialDesign:Flipper.FrontContent>
                            <materialDesign:Flipper.BackContent>
                                <materialDesign:ColorZone Background="#af282725"
                                                          CornerRadius="30"
                                                          Padding="0">
                                    <Grid Width="300"
                                          Height="256"
                                          Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="60" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="NameBack"
                                                   FontSize="24"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Text="{Binding Name}"
                                                   Background="#00000000">
                                            </TextBlock>
                                            <Button Grid.Column="3" 
                                                    Background="Transparent"
                                                    BorderBrush="Transparent"
                                                    Command="{x:Static materialDesign:Flipper.FlipCommand}">
                                                <materialDesign:PackIcon Kind="FormatListBulleted"/>
                                            </Button>
                                        </Grid>
                                        <wpf:VlcControl Grid.Row="1"
                                                        x:Name="CellPlayer"/>
                                    </Grid>
                                </materialDesign:ColorZone>
                            </materialDesign:Flipper.BackContent>
                        </materialDesign:Flipper>
                    </ListBoxItem>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
