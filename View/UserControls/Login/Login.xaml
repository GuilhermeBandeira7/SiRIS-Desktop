<UserControl x:Class="SiRISApp.View.UserControls.Login.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:SiRISApp.View.UserControls.Login" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:lottie="clr-namespace:LottieSharp.WPF;assembly=LottieSharp"
             mc:Ignorable="d" 
             d:DesignWidth="650"
             d:DesignHeight="600"
             Background="Transparent">

    <Border Width="850"
            Height="850"
            CornerRadius="20" 
            BorderThickness="2"
            BorderBrush="LightYellow">
        <Border.Background>
            <RadialGradientBrush GradientOrigin="0.5,0.5">
                <GradientStop Color="#7ffefefe" Offset="1"/>
                <GradientStop Color="#cfefefef" Offset="0.0" />
            </RadialGradientBrush>
        </Border.Background>
        <materialDesign:Transitioner Grid.Row="0"
                                     Margin="10"
                                     AutoApplyTransitionOrigins="True"
                                     SelectedIndex="{Binding LoginViewModel.LoginIndex}">
            <materialDesign:Transitioner.Background>
                 <ImageBrush ImageSource="../../Assets/Texture/diagonal-striped-brick.png" 
                                Opacity="1" 
                                TileMode="FlipX" 
                                Viewport="0,0,150,150"
                                ViewportUnits="Absolute" />
            </materialDesign:Transitioner.Background>
            <!--Login form-->
            <materialDesign:TransitionerSlide OpeningEffect="{materialDesign:TransitionEffect FadeIn}">
                <local:Form/>
            </materialDesign:TransitionerSlide>
            <!--loading form-->
            <materialDesign:TransitionerSlide>
                <materialDesign:Transitioner AutoApplyTransitionOrigins="True"
                                             SelectedIndex="{Binding LoginViewModel.LoginState}">
                    <materialDesign:TransitionerSlide  OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromRight}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBox HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Margin="0 0 0 0"
                                     FontSize="32"
                                     FontStyle="Italic"
                                     Foreground="Black"
                                     BorderBrush="Transparent"
                                     IsReadOnly="True"
                                     Text="Conectando ao servidor"/>
                            <lottie:LottieAnimationView HorizontalAlignment="Center"
                                                        Width="500"
                                                        Height="300"
                                                        AutoPlay="True"
                                                        ResourcePath="pack://application:,,,/view/Assets/LottieAnimations/loading8.json"
                                                        RepeatCount="-1">
                            </lottie:LottieAnimationView>
                        </StackPanel>
                    </materialDesign:TransitionerSlide>

                    <materialDesign:TransitionerSlide  OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromRight}">
                        <StackPanel VerticalAlignment="Center" 
                                    Margin="30">
                            <TextBox HorizontalAlignment="Center"
                                     Margin="0 0 0 0"
                                     FontSize="32"
                                     FontStyle="Italic"
                                     Foreground="Black"
                                     BorderBrush="Transparent"
                                     IsReadOnly="True"
                                     Text="Validando login"/>
                            <lottie:LottieAnimationView HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Width="500"
                                                        Height="300"
                                                        AutoPlay="True"
                                                        ResourcePath="pack://application:,,,/view/Assets/LottieAnimations/loading2.json"
                                                        RepeatCount="-1">
                            </lottie:LottieAnimationView>
                        </StackPanel>
                    </materialDesign:TransitionerSlide>
                    <materialDesign:TransitionerSlide  OpeningEffect="{materialDesign:TransitionEffect Kind=SlideInFromRight}">
                        <StackPanel VerticalAlignment="Center" 
                                    Margin="30">
                            <TextBox HorizontalAlignment="Center"
                                     Margin="0 0 0 0"
                                     FontSize="32"
                                     FontStyle="Italic"
                                     Foreground="Black"
                                     BorderBrush="Transparent"
                                     IsReadOnly="True"
                                     Text="Carregando dados"/>
                            <lottie:LottieAnimationView HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Width="500"
                                                        Height="300"
                                                        AutoPlay="True"
                                                        ResourcePath="pack://application:,,,/view/Assets/LottieAnimations/loading6.json"
                                                        RepeatCount="-1">
                            </lottie:LottieAnimationView>
                        </StackPanel>
                    </materialDesign:TransitionerSlide>
                    <materialDesign:TransitionerSlide  OpeningEffect="{materialDesign:TransitionEffect Kind=FadeIn}">
                        <StackPanel VerticalAlignment="Center" 
                                    Margin="30">
                            <TextBox HorizontalAlignment="Center"
                                     Margin="0 0 0 60"
                                     FontSize="32"
                                     FontStyle="Italic"
                                     Foreground="Black"
                                     BorderBrush="Transparent"
                                     IsReadOnly="True"
                                     Text="BEM VINDO!"/>
                            <Image Source="../../Assets/Logo-Siris-HD.png" Width="500" Height="200"/>
                        </StackPanel>
                    </materialDesign:TransitionerSlide>
                </materialDesign:Transitioner>
            </materialDesign:TransitionerSlide>
            <!--config form-->
            <materialDesign:TransitionerSlide>
                <local:LoginConfig/>
            </materialDesign:TransitionerSlide>
        </materialDesign:Transitioner>
    </Border>
</UserControl>
